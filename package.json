{
    "name": "auto-ext-manager",
    "displayName": "Sync Extensions",
    "description": "Automatically recommend and enable extensions based on file types in the workspace.",
    "publisher": "nihaltp",
    "icon": "icon.png",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.104.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^24.6.2",
        "@types/vscode": "^1.104.0",
        "typescript": "^5.9.3"
    },
    "contributes": {
        "commands": [
            {
                "command": "ExtManager.scanWorkspace",
                "title": "EM: Scan Workspace for File Types"
            },
            {
                "command": "ExtManager.addExtension",
                "title": "EM: Add Extension"
            },
            {
                "command": "ExtManager.showRecommendations",
                "title": "EM: Show Recommended Extensions (global)"
            }
        ]
    },
    "keywords": [
        "vscode",
        "extensions",
        "file types",
        "automation"
    ],
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nihaltp/ExtManager.git"
    }
}
