{
    "name": "smart-extension-manager",
    "displayName": "Smart Extension Manager",
    "description": "Automatically recommend and enable extensions based on file types in the workspace.",
    "publisher": "nihaltp",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.104.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^24.6.2",
        "@types/vscode": "^1.104.0",
        "typescript": "^5.9.3"
    },
    "contributes": {
        "commands": [
            {
                "command": "smartExtManager.scanWorkspace",
                "title": "SEM: Scan Workspace for File Types"
            },
            {
                "command": "smartExtManager.addExtension",
                "title": "SEM: Add Extension"
            }
        ]
    },
    "keywords": [
        "vscode",
        "extensions",
        "file types",
        "automation"
    ],
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nihaltp/smartExtManager.git"
    }
}
